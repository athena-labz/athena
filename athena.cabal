License:            MIT
License-files:      LICENSE

flag defer-plugin-errors
    description:
        Defer errors from the plugin, useful for things like Haddock that can't handle it.
    default: True
    manual: True

common lang
    default-language:   Haskell2010
    ghc-options:
      -Wall -Wnoncanonical-monad-instances
      -Wincomplete-uni-patterns -Wincomplete-record-updates
      -Wredundant-constraints -Widentities -rtsopts
      -- See Plutus Tx readme
      -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas
      -fno-strictness -fno-specialise
    if flag(defer-plugin-errors)
        ghc-options: -fplugin-opt PlutusTx.Plugin:defer-errors

library
  import: lang
  hs-source-dirs:      src, tests, app
  exposed-modules:     Account
                     , Account.Create
                     , Account.Safe.OffChain
                     , Account.Safe.OnChain
                     , Contract
                     , Contract.Accuse
                     , Contract.Create
                     , Contract.Mediate
                     , Contract.Sign
                     , Contract.Quit
                     , Contract.Safe.OffChain
                     , Contract.Safe.OnChain
                     , Executors.Consume
                     , Utils
                     , NFT.NFT
                     , NFT.NFTUtils
                     , NFT.OffChain
                     , Test.Run
                     , Test.Example
                     , Test.Sample
                     , Test.Trace
                     , Deploy
  build-depends:       aeson ^>=1.5.6.0
                     , base ^>=4.14.1.0
                     , bytestring -any
                     , data-default
                     , cardano-api -any
                     , containers -any
                     , freer-extras
                     , lens
                     , playground-common
                     , plutus-contract
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-ledger-constraints
                     , plutus-chain-index
                     , plutus-chain-index-core
                     , plutus-tx-plugin
                     , plutus-tx
                     , plutus-pab
                     , plutus-use-cases
                     , text
                     , serialise

test-suite tests
  type: exitcode-stdio-1.0
  main-is: Test.hs
  hs-source-dirs: tests
  other-modules:       Test.Example
                     , Test.Run
                     , Test.Sample
                     , Test.Trace
                     , Test.Suites
  default-language: Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas
  build-depends:       base ^>=4.14.1.0
                     , aeson
                     , containers
                     , data-default
                     , freer-extras
                     , lens
                     , athena
                     , bytestring
                     , cardano-api
                     , plutus-contract
                     , plutus-ledger
                     , plutus-tx
                     , QuickCheck
                     , HUnit
                     , tasty
                     , tasty-quickcheck
                     , text
  if !(impl(ghcjs) || os(ghcjs))
    build-depends: plutus-tx-plugin -any

executable plutus-starter-pab
  import: lang
  main-is: Main.hs
  hs-source-dirs: pab
  ghc-options:
    -threaded
  build-depends:
    base >= 4.9 && < 5,
    data-default -any,
    plutus-contract -any,
    plutus-pab -any,
    athena -any,
    aeson -any,
    freer-simple -any,
    prettyprinter -any,
    freer-extras -any,
    plutus-ledger -any,
    openapi3 -any,
    purescript-bridge,
    text,

executable scripts-tools
  import: lang
  main-is: Main.hs
  hs-source-dirs: app
  build-depends:
    base >= 4.9 && < 5,
    bytestring -any,
    cardano-api -any,
    data-default -any,
    plutus-contract -any,
    text -any,
    athena -any,
    plutus-tx -any,
    aeson -any,
    freer-simple -any,
    prettyprinter -any,
    freer-extras -any,
    plutus-ledger -any,
    openapi3 -any,
    serialise -any
